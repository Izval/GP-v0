{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler", // Está bien si usas Webpack/Bundler
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".", // Esto está bien, asegura rutas relativas desde la raíz del proyecto
    "paths": {
      "@/*": ["./app/*"], // Esto está bien si `app` es donde está tu mayor parte de código
      "@/firebaseConfig": ["./firebaseConfig.ts"] // Esto apunta directamente a firebaseConfig en la raíz
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "firebaseConfig.ts" // Asegúrate de incluir firebaseConfig explícitamente si está fuera de app
  ],
  "exclude": ["node_modules"]
}
